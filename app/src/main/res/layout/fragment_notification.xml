<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:tools="http://schemas.android.com/tools"
			 tools:context="com.practice.android.demo.drawer.fragments.NotificationFragment"
			 style="@style/layout_match_parent"
			 android:orientation="vertical"
			 android:gravity="center_horizontal|center_vertical">

	<LinearLayout
		style="@style/layout_wrap_content"
		android:layout_margin="@dimen/gap_smaller">
		<EditText
			style="@style/field"
			android:id="@+id/field_notification"
			android:hint="@string/field_notification"/>

		<Button
			style="@style/layout_wrap_content"
			android:text="@string/button_notification_start"
			android:layout_margin="@dimen/gap_smaller"
			android:onClick="onNotificationStart"/>
	</LinearLayout>

	<LinearLayout
		style="@style/layout_match_parent_width"
		android:gravity="center_horizontal|center_vertical"
		android:layout_margin="@dimen/gap_smaller">

		<NumberPicker
			style="@style/layout_wrap_content"
			android:id="@+id/number_picker"
			android:layout_marginEnd="@dimen/gap"
			android:orientation="horizontal"/>

		<Button
			style="@style/layout_wrap_content"
			android:text="@string/button_countdown"
			android:onClick="onNotifyCountdown"
			android:layout_margin="@dimen/gap_smaller"/>

		<Button
			style="@style/layout_wrap_content"
			android:layout_margin="@dimen/gap_smaller"
			android:onClick="onNotifyCountdownCancel"
			android:text="@string/button_stop"/>
	</LinearLayout>
	<Button
		style="@style/layout_wrap_content"
		android:layout_margin="@dimen/gap_smaller"
		android:text="@string/button_cancel"
		android:onClick="onNotificationCancel"/>
</LinearLayout>
